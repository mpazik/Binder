{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "types": ["node", "react", "styled-components"]
  },
  "include": [
    "src"
  ]
}
