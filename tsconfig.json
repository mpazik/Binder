{
  "compilerOptions": {
    "target": "ES2018",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": false,
    "allowJs": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": ["src"]
}
