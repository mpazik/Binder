{
  "name": "binder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn start:dev",
    "start:dev": "webpack-dev-server --port 8090",
    "start:prod": "yarn build && yarn serve build -p 9090",
    "build": "NODE_ENV=production webpack",
    "build:clean": "rm -rf build && git worktree remove build && git worktree add build gh-pages",
    "deploy:setup": "git branch gh-pages && git worktree add build gh-pages",
    "deploy": "cd build && git add . && git commit -m 'Deploy' && git push origin gh-pages",
    "lint": "yarn eslint",
    "fix": "prettier --write src && yarn eslint:fix",
    "test": "jest"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.0",
    "@primer/css": "^15.2.0",
    "@primer/octicons": "^11.0.0",
    "@types/jszip": "^3.4.1",
    "diff": "^5.0.0",
    "jsonld": "^3.3.0",
    "jszip": "^3.6.0",
    "linki": "^0.0.4",
    "pdfjs-dist": "^2.6.347",
    "schema-dts": "^0.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-typescript": "^7.13.0",
    "@types/diff": "^5.0.0",
    "@types/jest": "^26.0.20",
    "@types/jsonld": "^1.5.2",
    "@types/mozilla-readability": "^0.2.0",
    "@types/pdfjs-dist": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-jest": "^26.6.3",
    "copy-webpack-plugin": "^6.2.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.4",
    "typescript": "^4.1.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
